<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.madrefoca.cafe_tango.fragments.SchoolTab1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <Button
            android:illnessesSchoolHousesId="@+illnessesSchoolHousesId/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:elevation="10dp"
            android:text="Sub Clasification 1"
            android:textColor="@android:color/background_light" />


        <Button
            android:illnessesSchoolHousesId="@+illnessesSchoolHousesId/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:elevation="10dp"
            android:text="Sub Clasification 2"
            android:textColor="@android:color/background_light" />

        <Button
            android:illnessesSchoolHousesId="@+illnessesSchoolHousesId/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:text="Sub Clasification 3"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

</FrameLayout>
